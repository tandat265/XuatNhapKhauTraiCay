@model DoanhNghiep
@{
  ViewData["Title"] = "Chi tiết";
  @* var lstBoPhan = ViewData["lstBoPhan"] as List<BoPhan>;
  var lstTrangThai = ViewData["lstTrangThai"] as List<TrangThaiNhanVien>;
  var lstChucVu = ViewData["lstChucVu"] as List<ChucVu>; *@
}


@* ************** Content ************** *@
<!-- Basic Layout -->
<div class="row">
  <div class="col-xl">
    <div class="card mb-4">
      <h5 class="card-header">Chỉnh sửa doanh nghiệp</h5>
      <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.MaDoanhNghiep">
          <div class="mb-3">
            <label class="form-label" for="basic-icon-default-fullname">Tên doanh nghiệp</label>
            <input type="hidden" asp-for="MaDoanhNghiep" />
            <div class="input-group input-group-merge">
              <input type="text" class="form-control" id="fullname"
                aria-label="John Doe" aria-describedby="basic-icon-default-fullname2" asp-for="TenDoanhNghiep"/>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="basic-icon-default-email">Địa chỉ</label>
            <div class="input-group input-group-merge">
              <input type="text" id="email" class="form-control"
                aria-label="john.doe" aria-describedby="basic-icon-default-email2" asp-for="DiaChi"/>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="basic-icon-default-phone">Số điện thoại</label>
            <div class="input-group input-group-merge">
              <input type="text" id="phone" class="form-control"
              aria-label="658 799 8941" aria-describedby="basic-icon-default-phone2" asp-for="Sdt"/>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="basic-icon-default-company">Quốc gia</label>
            <div class="input-group input-group-merge">
              <select class="form-select" id="trangThai" asp-for="MaQuocGia" asp-items="@(ViewData["lstQuocGia"] as SelectList)">
                <option value="">-- Chọn quốc gia --</option>
              </select>
            </div>
          </div>
          <button id="saveBtn" type="submit" class="btn btn-primary">Save</button>
          <button id="backBtn" type="submit" asp-action="Index" class="btn btn-primary">Back</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById("saveBtn").addEventListener("click", function(event) {
    });
</script>
